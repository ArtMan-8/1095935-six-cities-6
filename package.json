{
  "name": "six-cities",
  "version": "6.0.0",
  "description": "Проект «Шесть городов» от HTML Academy",
  "keywords": [
    "rest",
    "api",
    "node.js"
  ],
  "main": "main.js",
  "type": "module",
  "scripts": {
    "server:mock": "json-server ./mocks/mock-server-data.json --port 3123",
    "server:generate": "npm run ts src/main.cli.ts -- --generate 10 ./mocks/offers.tsv http://localhost:3123/api",
    "start": "npm run build && node ./dist/main.cli.js",
    "start:dev": "npm run ts ./src/main.rest.ts | pino-pretty --colorize --translateTime SYS:standard",
    "docker:start": "docker compose --file ./docker-compose.yml --env-file ./.env --project-name six-cities up -d",
    "docker:enter": "docker exec -it six-cities_mongodb mongosh -u admin",
    "build": "npm run clean && npm run compile",
    "lint": "eslint src/ --ext .ts",
    "compile": "tsc -p tsconfig.json",
    "clean": "rimraf dist",
    "ts": "node --loader ts-node/esm"
  },
  "dependencies": {
    "@typegoose/typegoose": "12.1.0",
    "chalk": "5.3.0",
    "convict": "6.2.4",
    "convict-format-with-validator": "6.2.0",
    "dayjs": "1.11.10",
    "dotenv": "16.4.1",
    "got": "14.0.0",
    "inversify": "6.0.2",
    "mongoose": "8.1.1",
    "pino": "8.17.2",
    "reflect-metadata": "0.2.1"
  },
  "devDependencies": {
    "@types/convict": "6.1.6",
    "@types/convict-format-with-validator": "6.0.5",
    "@types/node": "18.17.17",
    "@typescript-eslint/eslint-plugin": "6.7.0",
    "@typescript-eslint/parser": "6.7.0",
    "eslint": "8.49.0",
    "eslint-config-htmlacademy": "9.1.1",
    "json-server": "0.17.4",
    "pino-pretty": "10.3.1",
    "rimraf": "5.0.1",
    "ts-node": "10.9.1",
    "tslib": "2.6.2",
    "typescript": "5.2.2"
  },
  "engines": {
    "node": "^18.0.0",
    "npm": ">=8"
  }
}
